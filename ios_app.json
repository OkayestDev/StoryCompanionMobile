{
  "expo": {
    "name": "Story Companion",
    "description": "Story Writing Companion App",
    "slug": "story_companion",
    "privacy": "public",
    "sdkVersion": "30.0.0",
    "platforms": ["ios", "android"],
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.isjustgame.storycompanion",
      "infoPlist": {
        "NSCameraUsageDescription": "Story Companion uses the camera to upload pictures of entities (Stories, Characters) to our cloud storage",
        "NSPhotoLibraryUsageDescription": "Story Companion uses photos you choose to upload pictures of entities (Stories, Characters) to our cloud storage"
      }
    },
    "android": {
      "versionCode": 6,
      "package": "com.isjustgame.storycompanion",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    }
  }
}
